package thread.basic;

class Super{
	
}
//이미 상속하고 있는 클래스가 있는 경우 Thread프로그래밍을 하기 우해서 Runnable
class RunnableDemo01 extends Super implements Runnable{

	@Override
	public void run() {
		for(int i=1; i<=20; i++) {
			System.out.print(+i+"("+") ");
			if(i%5 == 0) {
				System.out.println();
			}
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		
	}
	
}

public class RunnableTest01 {

	public static void main(String[] args) {
		System.out.println("==========프로그램 시작===========");
		
		ThreadDemo01 t1 = new ThreadDemo01("t1");
		ThreadDemo01 t2 = new ThreadDemo01("t2");
		t1.start();
		t2.start();
		for(int i=1; i<=20; i++) {
			System.out.print("main:"+i+" ");
			if(i%5 == 0) {
				System.out.println();
			}
			try {
				Thread.sleep(200);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		System.out.println("==========프로그램 종료===========");

	}

}
